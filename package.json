{
  "name": "big-bang-token",
  "version": "1.0.0",
  "description": "BIG BANG Token - Plataforma de Staking con Smart Contracts",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "node": "hardhat node",
    "deploy": "hardhat run scripts/deploy.js",
    "deploy:testnet": "hardhat run scripts/deploy.js --network testnet",
    "deploy:mainnet": "hardhat run scripts/deploy.js --network mainnet",
    "verify": "hardhat verify",
    "frontend": "cd frontend && python3 -m http.server 8000",
    "dev": "concurrently \"npm run node\" \"npm run frontend\""
  },
  "keywords": [
    "ethereum",
    "smart-contracts",
    "staking",
    "defi",
    "hardhat"
  ],
  "author": "BIG BANG Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "dotenv": "^16.3.1",
    "hardhat": "^2.19.0",
    "hardhat-deploy": "^0.12.0",
    "hardhat-deploy-ethers": "^0.4.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "ethers": "^6.15.0"
  }
}
